<?xml version="1.0" encoding="UTF-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.uba.kanji">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:launchMode="singleTop"
        android:theme="@style/MaterialTheme">

        <activity android:name="ar.uba.kanji.ClassifierActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/activity_name_classification">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" android:parentActivityName="ar.uba.kanji.ClassifierActivity"
            android:theme="@style/Base.Theme.AppCompat"> <!-- optional (needed if default theme has no action bar) -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="ar.uba.kanji.ClassifierActivity" />
         </activity>
        <activity android:name="ar.uba.kanji.ClassifyImageActivity" android:parentActivityName="ar.uba.kanji.ClassifierActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.uba.kanji.ClassifierActivity" />
        </activity>
        <activity android:name="ar.uba.kanji.KanjiInformationActivity" android:parentActivityName="ar.uba.kanji.ClassifyImageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.uba.kanji.ClassifyImageActivity" />
        </activity>


    </application>

</manifest>
